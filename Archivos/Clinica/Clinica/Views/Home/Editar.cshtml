
@model AsignarCitas

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<body>
    <div class="card">
        <div clas="card-body">

            <form asp-action="Editar" asp-controller="Home" method="post">
                <input asp-for="Idcitas" type="hidden" class="form-control">
                <div class="form-floating mb-3">

                    <input asp-for="nombre" type="text" class="form-control" placeholder="Nombre">
                    <label for="floatingInput">Nombre completo</label>
                    <span asp-validation-for="nombre" class="text-danger"></span>

                </div>
                <div class="form-floating">
                    <input asp-for="telefono" type="text" class="form-control" placeholder="Telefono">
                    <label for="floatingPassword">Número telefónico</label>
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <br />

                <div class="form-floating mb-3">
                    <input asp-for="correo" type="email" class="form-control" placeholder="nombre@gmail.com">
                    <label for="floatingInput">Correo Electronico</label>
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="fecha" type="date" class="form-control" placeholder="fecha">
                    <label for="floatingInput">Fecha</label>
                    <span asp-validation-for="fecha" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="hora" type="text" class="form-control" placeholder="hora">
                    <label for="floatingInput">Hora</label>
                    <span asp-validation-for="hora" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <textarea asp-for="comentario" class="form-control" placeholder="Leave a comment here" style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Comentario</label>
                    <span asp-validation-for="comentario" class="text-danger"></span>
                </div>

                <br />

                <button type="submit" class="btn btn-primary">Editar</button>
                <a asp-action="agregarcita" asp-controller="Home" class="btn btn-warning"> volver a la lista</a>
            </form>

        </div>
    </div>


    <br />


    <br />
    <br />
    <br />
    <br />
</body>
